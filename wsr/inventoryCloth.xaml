<Window x:Class="wsr.inventoryCloth"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wsr"
        mc:Ignorable="d"
        Title="Инвентаризация" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid Background="#FFE0A9AF">
        <DataGrid x:Name="inventoryClothList" HorizontalAlignment="Left" Height="400" Margin="10,10,0,0" VerticalAlignment="Top" Width="621" AutoGenerateColumns="False" AlternationCount="0" Grid.Row="0"/>
        <Button x:Name="Exit" Content="Выход" HorizontalAlignment="Left" Height="74" Margin="636,336,0,0" VerticalAlignment="Top" Width="148" Click="Exit_Click"/>
        <Button Content="Сохранить" HorizontalAlignment="Left" Height="63" Margin="636,268,0,0" VerticalAlignment="Top" Width="148" Click="Button_Click"/>

    </Grid>
</Window>
