<Window x:Class="wsr.clothSklad"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wsr"
        mc:Ignorable="d"
        Title="Склад ткани" Height="450" Width="800">
    <Grid Background="#FFE0A9AF">
        <DataGrid x:Name="skladcl" HorizontalAlignment="Left" Height="400" Margin="10,10,0,0" VerticalAlignment="Top" Width="514" SelectionChanged="DataGrid_SelectionChanged" Loaded="Skladcl_Loaded"/>
        <Button x:Name="post" Content="Поступление&#xD;&#xA;товаров" HorizontalAlignment="Left" Height="77" Margin="546,10,0,0" VerticalAlignment="Top" Width="198" Click="Post_Click" Background="#FFB5D5CA"/>
        <Button x:Name="del" Content="Списание&#xD;&#xA;товаров" HorizontalAlignment="Left" Height="77" Margin="546,92,0,0" VerticalAlignment="Top" Width="198" Click="del_Click" Background="#FFB5D5CA"/>
        <Button x:Name="inv" Content="Инвентаризация" HorizontalAlignment="Left" Height="77" Margin="546,174,0,0" VerticalAlignment="Top" Width="198" Click="inv_Click" Background="#FFB5D5CA"/>
        <Button x:Name="exit" Content="Выход" HorizontalAlignment="Left" Height="77" Margin="546,309,0,0" VerticalAlignment="Top" Width="198" Click="exit_Click" Background="#FFB5D5CA"/>

    </Grid>
</Window>
